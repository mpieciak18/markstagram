{
  "name": "@markstagram/server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:local": "if [ -f .env ]; then set -a; . ./.env; set +a; fi; vitest run --threads false",
    "test:docker": "if [ -f .env.test ]; then set -a; . ./.env.test; set +a; elif [ -f .env.test.sample ]; then set -a; . ./.env.test.sample; set +a; fi; DATABASE_ADAPTER=${DATABASE_ADAPTER:-direct} vitest run --threads false",
    "dev": "bun run src/index.bun.ts",
    "dev:bun": "bun run src/index.bun.ts",
    "dev:bun:compat": "bun run src/index.ts",
    "dev:bun:native": "bun run src/index.bun.ts",
    "dev:bun:codex": "PATH=\"$HOME/.bun/bin:$PATH\" bun run src/index.bun.ts",
    "dev:bun:compat:codex": "PATH=\"$HOME/.bun/bin:$PATH\" bun run src/index.ts",
    "dev:bun:native:codex": "PATH=\"$HOME/.bun/bin:$PATH\" bun run src/index.bun.ts",
    "build": "tsc -p tsconfig.json",
    "startdev": "CLIENT_URL=http://localhost:5173 bun run dist/index.bun.js",
    "startbuilt": "CLIENT_URL=http://localhost:4173 bun run dist/index.bun.js",
    "startbuilt:bun": "bun run dist/index.bun.js",
    "startbuilt:bun:compat": "bun run dist/index.js",
    "startbuilt:bun:native": "bun run dist/index.bun.js",
    "startbuilt:bun:codex": "PATH=\"$HOME/.bun/bin:$PATH\" bun run dist/index.bun.js",
    "startbuilt:bun:compat:codex": "PATH=\"$HOME/.bun/bin:$PATH\" bun run dist/index.js",
    "startbuilt:bun:native:codex": "PATH=\"$HOME/.bun/bin:$PATH\" bun run dist/index.bun.js",
    "test:bun": "if [ -f .env ]; then set -a; . ./.env; set +a; fi; bunx vitest run --threads false",
    "test:bun:codex": "PATH=\"$HOME/.bun/bin:$PATH\"; if [ -f .env ]; then set -a; . ./.env; set +a; fi; bunx vitest run --threads false",
    "prisma:generate": "prisma generate",
    "prisma:migrate:test": "if [ -f .env.test ]; then set -a; . ./.env.test; set +a; elif [ -f .env.test.sample ]; then set -a; . ./.env.test.sample; set +a; fi; DATABASE_ADAPTER=${DATABASE_ADAPTER:-direct} prisma migrate deploy",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@markstagram/shared-types": "file:../packages/shared-types",
    "@prisma/adapter-neon": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "bcryptjs": "^3.0.3",
    "firebase-admin": "^11.10.1",
    "hono": "^4.12.2",
    "jose": "^6.1.3",
    "socket.io": "^4.7.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@hono/node-server": "^1.19.9",
    "@types/node": "^20.10.4",
    "@types/supertest": "^2.0.12",
    "prisma": "^7.4.0",
    "supertest": "^6.3.3",
    "typescript": "^5.7.0",
    "vitest": "^0.34.2"
  },
  "description": ""
}
